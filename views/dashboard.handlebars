<div class="dashboard">
	<h2>Your Blog Posts</h2>
	{{#each posts as |post|}}
	<article>
		<a href="/dashboard/edit/{{post.id}}" class="postheader" title="Click to edit article.">
			<h2>{{post.title}}</h2>
			<span>Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
		</a>
		<div>
			{{post.body}}
		</div>
	</article>
	{{/each}}
	<a href="/dashboard/add">Add a New Post</a>
</div>