<form id="edit-post" class="editpost">
	<h2>Editing '{{post.title}}'</h2>
	<div>
		<label for="post-title">Title</label>
		<input type="text" id="post-title" value="{{post.title}}"></input>
	</div>
	<textarea id="post-body">{{post.body}}</textarea>
	<div>
		<button type="submit">Save Changes</button>
	</div>
	<div>
		<button type="button" id="delete-button">Delete This Post</button>
	</div>
</form>
<script src="/javascript/editpost.js"></script>