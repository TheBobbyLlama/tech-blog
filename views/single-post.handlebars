<div class="singlearticle">
	<h2>{{post.title}}</h2>
	<div class="articledetails">
		Posted by {{post.user.username}} <span>&mdash; {{format_date post.created_at}}</span>
	</div>
	<div class="articlebody">{{post.body}}</div>
	<h3>Comments</h3>
	{{#each post.comment}}
	<div class="comment">
		<div class="commentheader">
			{{user.username}} <span>&mdash; {{format_date created_at}}</span>
		</div>
		{{comment_text}}
	</div>
	{{/each}}
	{{#if loggedIn}}
	<form id="comment-form">
		<h2>Add A Comment</h2>
		<div class="commentarea">
			<textarea id="comment-text" rows="3" maxlength="255"></textarea>
		</div>
		<div>
			<button type="submit">Comment</button>
		</div>
	</form>
	<script src="/javascript/comment.js"></script>
	{{/if}}
</div>